{
  "provisioners": [{
    "type": "shell",
    "scripts": [
      "scripts/base.sh",
      "scripts/cloud.sh",
      "scripts/cleanup.sh"
    ],
    "override": {
      "centos7openstack": {
        "execute_command": "sh '{{.Path}}'"
      }
    }
  }],
  "builders": [{
      "name": "centos7openstack",
      "type": "qemu",
      "iso_checksum": "3a7cb1f2041fee7c3c99c2afc7f1bf60ac671c73",
      "iso_checksum_type": "sha1",
      "iso_url": "http://mirrors.prometeus.net/centos/7.5.1804/isos/x86_64/CentOS-7-x86_64-DVD-1804.iso",
      "ssh_wait_timeout": "30s",
      "shutdown_command": "shutdown -P now",
      "disk_size": 5000,
      "format": "qcow2",
      "output_directory": "output",
      "qemuargs": [
        [ "-m", "1024M" ]
      ],
      "headless": true,
      "machine_type": "pc",
      "accelerator": "tcg",
      "http_directory": "http",
      "http_port_min": 10082,
      "http_port_max": 10089,
      "ssh_host_port_min": 2222,
      "ssh_host_port_max": 2229,
      "ssh_username": "root",
      "ssh_password": "linux",
      "ssh_port": 22,
      "ssh_wait_timeout": "90m",
      "vnc_port_min": 5900,
      "vnc_port_max": 5900,
      "vm_name": "centos7openstack",
      "disk_interface": "virtio",
      "net_device": "virtio-net-pci",
      "boot_command": [
        "i<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks_centos7.cfg<enter><wait>"
      ]
    }]
}
